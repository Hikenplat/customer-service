# ========================================
# Backend Environment Variables
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# Server Configuration
NODE_ENV=development
PORT=5000

# Database
DB_PATH=./src/database/dispute-portal.json

# JWT Secret (Generate a random string for production!)
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production

# Email Configuration (Choose one option below)

# Option 1: Gmail (for development/testing)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-gmail-app-password
EMAIL_FROM=Dispute Portal <your-email@gmail.com>

# Option 2: SendGrid (for production)
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_SECURE=false
# EMAIL_USER=apikey
# EMAIL_PASSWORD=SG.your-sendgrid-api-key
# EMAIL_FROM=Dispute Portal <noreply@yourdomain.com>

# Option 3: Hostinger (for production with custom domain)
# EMAIL_HOST=smtp.hostinger.com
# EMAIL_PORT=465
# EMAIL_SECURE=true
# EMAIL_USER=support@yourdomain.com
# EMAIL_PASSWORD=your-hostinger-email-password
# EMAIL_FROM=Dispute Portal <support@yourdomain.com>

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Admin Account (Default admin credentials - CHANGE IN PRODUCTION!)
ADMIN_EMAIL=admin@disputeportal.com
ADMIN_PASSWORD=Admin@SecurePass123
